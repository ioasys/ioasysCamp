<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_default"
    tools:context=".presentation.ui.diary.DiaryFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/pattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/patterntwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleMyDiary"
        style="@style/TitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_diary"
        android:textColor="@color/lighter"
        app:layout_constraintBottom_toBottomOf="@+id/pattern"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pattern"
        tools:ignore="TextContrastCheck" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_white_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pattern"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvShare"
                style="@style/InputLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/head_32"
                android:layout_marginTop="@dimen/margin_40"
                android:layout_marginEnd="@dimen/head_32"
                android:text="@string/share_travels"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/appCompatButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/head_32"
                android:layout_marginTop="@dimen/head_32"
                android:layout_marginEnd="@dimen/head_32"
                android:background="@drawable/large_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvShare"
                android:text="Fazer um post"
                android:textAllCaps="false"
                android:fontFamily="@font/outfit_semibold"
                android:textColor="@color/lighter"
                android:textSize="@dimen/headline_14"/>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/margin_28"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginTop="@dimen/head_32"
                android:background="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appCompatButton" />








































            <androidx.viewpager.widget.ViewPager
                android:id="@+id/line02"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="261dp"
                android:layout_marginStart="@dimen/margin_28"
                android:layout_marginEnd="@dimen/margin_20"
                android:background="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/line03"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="570dp"
                android:layout_marginStart="@dimen/margin_28"
                android:layout_marginEnd="@dimen/margin_20"
                android:background="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line02" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/line04"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="570dp"
                android:layout_marginStart="@dimen/margin_28"
                android:layout_marginEnd="@dimen/margin_20"
                android:background="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line03" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>