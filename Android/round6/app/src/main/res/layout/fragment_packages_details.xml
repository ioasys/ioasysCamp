<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.packages.PackagesDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/sliderIndicatorDots"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/pressed_button"
                android:clickable="true"
                android:focusable="true"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:scaleType="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/white_back_arrow" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/app_margin"
            app:layout_constraintTop_toBottomOf="@id/slider">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPackageTitle"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/outfit_semibold"
                android:textColor="@color/neutral_darker"
                android:textSize="@dimen/headline_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="MÃ£os na argila!" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPackagePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_semibold"
                android:textColor="@color/neutral_darker"
                android:textSize="@dimen/headline_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvPackageTitle"
                tools:text="@string/payment_amount" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPackageDescription"
                style="@style/BodyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPackageTitle"
                tools:text="@string/community_description" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPackageVacancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/outfit_semibold"
                android:textColor="@color/neutral_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPackageDescription"
                tools:text="7" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/outfit_semibold"
                android:text="@string/available_vacancies"
                android:textColor="@color/neutral_dark"
                app:layout_constraintBottom_toBottomOf="@id/tvPackageVacancy"
                app:layout_constraintStart_toEndOf="@id/tvPackageVacancy" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPeopleAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:text="@string/people_amount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPackageVacancy" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/tvPeopleAmount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvPeopleAmount">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/minusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:scaleType="center"
                    android:src="@drawable/custom_ic_minus" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPeopleAmountNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_regular"
                    android:text="@string/people_amount_number" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/plusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:src="@drawable/custom_ic_plus" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBuyPackage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_hover_primary"
                android:padding="17.5dp"
                android:text="@string/buy_package"
                android:textAllCaps="false"
                android:textColor="@color/lighter"
                android:textSize="@dimen/button_14"
                app:layout_constraintTop_toBottomOf="@id/tvPeopleAmount" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/accommodationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBuyPackage"
                app:srcCompat="@drawable/ic_accommodation" />

            <View
                android:id="@+id/dividerOne"
                android:layout_width="2dp"
                android:layout_height="98dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:background="@color/medium_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/accommodationIcon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAccommodation"
                style="@style/SubtitleStyleOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12.71dp"
                android:text="@string/accommodation"
                app:layout_constraintBottom_toBottomOf="@id/accommodationIcon"
                app:layout_constraintStart_toEndOf="@id/accommodationIcon"
                app:layout_constraintTop_toTopOf="@id/accommodationIcon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAccommodationDesc"
                style="@style/BodyTextStyle"
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@id/tvAccommodation"
                app:layout_constraintTop_toBottomOf="@id/tvAccommodation"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit ut aliquam, purus sit amet luctus venenatis, lectus magna fringilla urna, porttitor" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/activitiesIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAccommodationDesc"
                app:srcCompat="@drawable/ic_activities" />

            <View
                android:id="@+id/dividerTwo"
                android:layout_width="2dp"
                android:layout_height="98dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:background="@color/medium_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activitiesIcon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvActivities"
                style="@style/SubtitleStyleOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12.71dp"
                android:text="@string/activities"
                app:layout_constraintBottom_toBottomOf="@id/activitiesIcon"
                app:layout_constraintStart_toEndOf="@id/activitiesIcon"
                app:layout_constraintTop_toTopOf="@id/activitiesIcon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvActivitiesDesc"
                style="@style/BodyTextStyle"
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@id/tvActivities"
                app:layout_constraintTop_toBottomOf="@id/tvActivities"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit ut aliquam, purus sit amet luctus venenatis, lectus magna fringilla urna, porttitor" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/datesIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvActivitiesDesc"
                app:srcCompat="@drawable/ic_datas" />

            <View
                android:id="@+id/dividerThree"
                android:layout_width="2dp"
                android:layout_height="42dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:background="@color/medium_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/datesIcon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12.71dp"
                android:text="@string/dates"
                style="@style/SubtitleStyleOne"
                app:layout_constraintBottom_toBottomOf="@id/datesIcon"
                app:layout_constraintStart_toEndOf="@id/datesIcon"
                app:layout_constraintTop_toTopOf="@id/datesIcon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDatesDesc"
                style="@style/BodyTextStyle"
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@id/tvDates"
                app:layout_constraintTop_toBottomOf="@id/tvDates"
                tools:text="Do dia 21/06 a 23/06\n4 dias e 3 noites de passeio" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/mapIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDatesDesc"
                app:srcCompat="@drawable/ic_map" />

            <View
                android:id="@+id/dividerFour"
                android:layout_width="2dp"
                android:layout_height="92dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:background="@color/medium_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mapIcon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTravelHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12.71dp"
                android:text="@string/travel_tips"
                style="@style/SubtitleStyleOne"
                app:layout_constraintBottom_toBottomOf="@id/mapIcon"
                app:layout_constraintStart_toEndOf="@id/mapIcon"
                app:layout_constraintTop_toTopOf="@id/mapIcon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTravelHintDesc"
                style="@style/BodyTextStyle"
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="52dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvTravelHint"
                app:layout_constraintTop_toBottomOf="@id/tvTravelHint"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit ut aliquam, purus sit amet luctus venenatis, lectus magna fringilla urna, porttitor" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>