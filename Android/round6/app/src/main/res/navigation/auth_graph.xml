<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="br.com.ioasys.round6.presentation.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_packagesDetailsFragment"
            app:destination="@id/packagesDetailsFragment" />
    </fragment>

    <include app:graph="@navigation/nav_graph" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="br.com.ioasys.round6.presentation.ui.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/packagesDetailsFragment"
        android:name="br.com.ioasys.round6.presentation.ui.packages.PackagesDetailsFragment"
        android:label="fragment_packages_details"
        tools:layout="@layout/fragment_packages_details" />
</navigation>