<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="br.com.ioasys.round6.presentation.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_packagesDetailsFragment"
            app:destination="@id/packagesDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_homeFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
    </fragment>

    <fragment
        android:id="@+id/diaryFragment"
        android:name="br.com.ioasys.round6.presentation.ui.diary.DiaryFragment"
        android:label="fragment_diary"
        tools:layout="@layout/fragment_diary" />

    <fragment
        android:id="@+id/communitiesFragment"
        android:name="br.com.ioasys.round6.presentation.ui.communities.CommunitiesFragment"
        android:label="fragment_communities"
        tools:layout="@layout/fragment_communities" >
        <action
            android:id="@+id/action_communitiesFragment_to_communitiesDetailsDialog"
            app:destination="@id/communitiesDetailsDialog" />
    </fragment>

    <fragment
        android:id="@+id/tripsFragment"
        android:name="br.com.ioasys.round6.presentation.ui.trips.TripsFragment"
        android:label="fragment_trips"
        tools:layout="@layout/fragment_trips" />
    <fragment
        android:id="@+id/packagesDetailsFragment"
        android:name="br.com.ioasys.round6.presentation.ui.packages.PackagesDetailsFragment"
        android:label="fragment_packages_details"
        tools:layout="@layout/fragment_packages_details" >
        <action
            android:id="@+id/action_packagesDetailsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_packagesDetailsFragment_to_checkoutFragment"
            app:destination="@id/checkoutFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="br.com.ioasys.round6.presentation.ui.about.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="br.com.ioasys.round6.presentation.ui.checkout.CheckoutFragment"
        android:label="fragment_checkout"
        tools:layout="@layout/fragment_checkout" />
    <dialog
        android:id="@+id/communitiesDetailsDialog"
        android:name="br.com.ioasys.round6.presentation.components.CommunitiesDetailsDialog"
        android:label="CommunitiesDetailsDialog" />
    <fragment
        android:id="@+id/accountFragment"
        android:name="br.com.ioasys.round6.presentation.ui.account.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" />
</navigation>